// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  extensions = [vector]
}

model User {
  id        String   @id @default(cuid())
  deviceKey String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chats Chat[]

  @@map("users")
}

model Chat {
  id         String   @id @default(cuid())
  userId     String
  title      String?
  lastStatus String?  // "PROCESSING" | "SUCCESS" | "FAIL"
  lastError  String?  // Error message if lastStatus is "FAIL"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@map("chats")
}

model ChatMessage {
  id        String   @id @default(cuid())
  chatId   String
  role      String   // "user" | "assistant"
  content   String
  metadata  Json?    // Store debug data (tool selector, tool execution)
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apps App[]

  @@map("categories")
}

model App {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  categoryId  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  classes  Class[]
  appData  AppData?

  @@map("apps")
}

model Class {
  id          String   @id @default(cuid())
  slug        String   @unique
  appId       String
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  app      App       @relation(fields: [appId], references: [id], onDelete: Cascade)
  methods  Method[]
  classData ClassData?

  @@map("classes")
}

model Method {
  id               String   @id @default(cuid())
  slug             String   @unique
  classId          String
  name             String
  path             String
  httpVerb         String   // GET, POST, PUT, DELETE, etc.
  description      String?
  arguments        Json     // Array of { name, type, description }
  returnType       String?
  returnDescription String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  class      Class       @relation(fields: [classId], references: [id], onDelete: Cascade)
  methodData MethodData?

  @@map("methods")
}

model AppData {
  id              String   @id @default(cuid())
  appId           String   @unique
  nameVector      Unsupported("vector(1536)")
  descriptionVector Unsupported("vector(1536)")?
  metadataKeys    String[]
  metadataValues  Json     // Array of strings
  metadataVectors Json     // Array of vector(1536) - stored as JSON for now
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  app App @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@map("app_data")
}

model ClassData {
  id              String   @id @default(cuid())
  classId         String   @unique
  nameVector      Unsupported("vector(1536)")
  descriptionVector Unsupported("vector(1536)")?
  metadataKeys    String[]
  metadataValues  Json     // Array of strings
  metadataVectors Json     // Array of vector(1536) - stored as JSON for now
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@map("class_data")
}

model MethodData {
  id              String   @id @default(cuid())
  methodId        String   @unique
  nameVector      Unsupported("vector(1536)")
  descriptionVector Unsupported("vector(1536)")?
  metadataKeys    String[]
  metadataValues  Json     // Array of strings
  metadataVectors Json     // Array of vector(1536) - stored as JSON for now
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  method Method @relation(fields: [methodId], references: [id], onDelete: Cascade)

  @@map("method_data")
}

model DefaultPrompt {
  id        String   @id @default(cuid())
  prompt    String   // The generated query text
  classIds  String[] // Array of class IDs used to generate this prompt
  icon      String?  // Cached icon emoji for the prompt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("default_prompts")
}
